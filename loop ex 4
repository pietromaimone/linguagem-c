#include <stdio.h>

int main() {   
    //Escreva um programa que solicita 10 números e ao final exibe a soma de todos eles.
    int n = 1, numero, soma = 0;

    printf("Escreva 10 números:\n");

    while(n <= 10) {
        printf("Digite o número %d: ", n);
        scanf("%d", &numero);
        soma += numero;
        n++;  
    }

    printf("A soma dos 10 números é: %d\n", soma);
    
    
    return 0;
}
